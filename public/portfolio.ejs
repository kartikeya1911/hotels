<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Portfolio - LuxeStay Hotels</title>
        <link rel="stylesheet" href="/css/style.css" />
        <link rel="stylesheet" href="/css/components.css" />
        <link rel="stylesheet" href="/css/footer.css" />
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
        <link rel="stylesheet" href="https://unpkg.com/aos@next/dist/aos.css" />
        <style>
            .portfolio-container {
                min-height: 100vh;
                background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
                padding: 2rem;
            }

            .portfolio-header {
                background: rgba(255, 255, 255, 0.95);
                padding: 3rem;
                border-radius: 20px;
                box-shadow: 0 10px 30px rgba(0, 0, 0, 0.08);
                margin-bottom: 2.5rem;
                display: flex;
                align-items: center;
                gap: 2rem;
                backdrop-filter: blur(10px);
                border: 1px solid rgba(255, 255, 255, 0.2);
            }

            .portfolio-avatar {
                width: 120px;
                height: 120px;
                border-radius: 50%;
                background: linear-gradient(135deg, var(--primary-color), #4a90e2);
                display: flex;
                align-items: center;
                justify-content: center;
                color: white;
                font-size: 3rem;
                font-weight: 600;
                box-shadow: 0 8px 25px rgba(74, 144, 226, 0.3);
                transition: transform 0.3s ease;
            }

            .portfolio-avatar:hover {
                transform: scale(1.05) rotate(5deg);
            }

            .portfolio-info {
                flex-grow: 1;
            }

            .portfolio-name {
                font-size: 2.5rem;
                color: var(--text-dark);
                margin-bottom: 0.5rem;
                background: linear-gradient(90deg, var(--primary-color), #4a90e2);
                -webkit-background-clip: text;
                -webkit-text-fill-color: transparent;
                background-clip: text;
            }

            .portfolio-stats {
                display: flex;
                gap: 2rem;
                margin-top: 1.5rem;
            }

            .stat-item {
                display: flex;
                flex-direction: column;
                align-items: center;
                gap: 0.5rem;
            }

            .stat-value {
                font-size: 1.8rem;
                font-weight: 600;
                color: var(--primary-color);
            }

            .stat-label {
                color: var(--text-light);
                font-size: 1rem;
            }

            .portfolio-grid {
                display: grid;
                grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
                gap: 2rem;
                margin-bottom: 2.5rem;
            }

            .portfolio-card {
                background: rgba(255, 255, 255, 0.95);
                padding: 2rem;
                border-radius: 20px;
                box-shadow: 0 10px 30px rgba(0, 0, 0, 0.08);
                transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
                border: 1px solid rgba(255, 255, 255, 0.2);
                backdrop-filter: blur(10px);
            }

            .portfolio-card:hover {
                transform: translateY(-10px);
                box-shadow: 0 20px 40px rgba(0, 0, 0, 0.12);
            }

            .card-header {
                display: flex;
                align-items: center;
                gap: 1rem;
                margin-bottom: 1.5rem;
            }

            .card-icon {
                width: 50px;
                height: 50px;
                border-radius: 12px;
                display: flex;
                align-items: center;
                justify-content: center;
                font-size: 1.5rem;
                color: white;
                background: linear-gradient(135deg, var(--primary-color), #4a90e2);
            }

            .card-title {
                font-size: 1.4rem;
                color: var(--text-dark);
                font-weight: 600;
            }

            .stay-list {
                display: flex;
                flex-direction: column;
                gap: 1rem;
            }

            .stay-item {
                display: flex;
                gap: 1rem;
                padding: 1rem;
                background: rgba(248, 249, 250, 0.7);
                border-radius: 12px;
                transition: all 0.3s ease;
            }

            .stay-item:hover {
                transform: translateX(5px);
                background: rgba(248, 249, 250, 0.9);
            }

            .stay-image {
                width: 80px;
                height: 80px;
                border-radius: 10px;
                object-fit: cover;
            }

            .stay-details {
                flex-grow: 1;
            }

            .stay-name {
                font-weight: 600;
                color: var(--text-dark);
                margin-bottom: 0.3rem;
            }

            .stay-date {
                color: var(--text-light);
                font-size: 0.9rem;
            }

            .review-list {
                display: flex;
                flex-direction: column;
                gap: 1rem;
            }

            .review-item {
                padding: 1rem;
                background: rgba(248, 249, 250, 0.7);
                border-radius: 12px;
                transition: all 0.3s ease;
            }

            .review-item:hover {
                transform: translateX(5px);
                background: rgba(248, 249, 250, 0.9);
            }

            .review-header {
                display: flex;
                justify-content: space-between;
                align-items: center;
                margin-bottom: 0.5rem;
            }

            .review-hotel {
                font-weight: 600;
                color: var(--text-dark);
            }

            .review-rating {
                color: #ffc107;
            }

            .review-text {
                color: var(--text-light);
                font-size: 0.95rem;
                line-height: 1.5;
            }

            .achievement-list {
                display: grid;
                grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
                gap: 1rem;
            }

            .achievement-item {
                text-align: center;
                padding: 1.5rem;
                background: rgba(248, 249, 250, 0.7);
                border-radius: 12px;
                transition: all 0.3s ease;
            }

            .achievement-item:hover {
                transform: translateY(-5px);
                background: rgba(248, 249, 250, 0.9);
            }

            .achievement-icon {
                font-size: 2rem;
                color: var(--primary-color);
                margin-bottom: 1rem;
            }

            .achievement-title {
                font-weight: 600;
                color: var(--text-dark);
                margin-bottom: 0.3rem;
            }

            .achievement-date {
                color: var(--text-light);
                font-size: 0.9rem;
            }

            @media (max-width: 768px) {
                .portfolio-container {
                    padding: 1rem;
                }

                .portfolio-header {
                    flex-direction: column;
                    text-align: center;
                    padding: 2rem;
                }

                .portfolio-stats {
                    justify-content: center;
                }

                .portfolio-grid {
                    grid-template-columns: 1fr;
                }

                .stay-item {
                    flex-direction: column;
                    align-items: center;
                    text-align: center;
                }

                .stay-image {
                    width: 100%;
                    height: 150px;
                }
            }
        </style>
    </head>
    <body>
        <%- include('partials/nav') %>

        <main class="portfolio-container">
            <div class="portfolio-header" data-aos="fade-down">
                <div class="portfolio-avatar" id="portfolioAvatar"><%= user.firstName.charAt(0) %></div>
                <div class="portfolio-info">
                    <h1 class="portfolio-name" id="portfolioName"><%= user.firstName %> <%= user.lastName %></h1>
                    <p class="portfolio-email" id="portfolioEmail"><%= user.email %></p>
                    <div class="portfolio-stats">
                        <div class="stat-item">
                            <span class="stat-value" id="totalStays">0</span>
                            <span class="stat-label">Total Stays</span>
                        </div>
                        <div class="stat-item">
                            <span class="stat-value" id="totalReviews">0</span>
                            <span class="stat-label">Reviews</span>
                        </div>
                        <div class="stat-item">
                            <span class="stat-value" id="totalPoints">0</span>
                            <span class="stat-label">Loyalty Points</span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="portfolio-grid">
                <div class="portfolio-card" data-aos="fade-up" data-aos-delay="100">
                    <div class="card-header">
                        <div class="card-icon">
                            <i class="fas fa-hotel"></i>
                        </div>
                        <h2 class="card-title">Recent Stays</h2>
                    </div>
                    <div class="stay-list" id="recentStays">
                        <!-- Stays will be populated dynamically -->
                    </div>
                </div>

                <div class="portfolio-card" data-aos="fade-up" data-aos-delay="200">
                    <div class="card-header">
                        <div class="card-icon">
                            <i class="fas fa-star"></i>
                        </div>
                        <h2 class="card-title">Recent Reviews</h2>
                    </div>
                    <div class="review-list" id="recentReviews">
                        <!-- Reviews will be populated dynamically -->
                    </div>
                </div>

                <div class="portfolio-card" data-aos="fade-up" data-aos-delay="300">
                    <div class="card-header">
                        <div class="card-icon">
                            <i class="fas fa-trophy"></i>
                        </div>
                        <h2 class="card-title">Achievements</h2>
                    </div>
                    <div class="achievement-list" id="achievements">
                        <!-- Achievements will be populated dynamically -->
                    </div>
                </div>
            </div>
        </main>

        <%- include('partials/footer') %>

        <script src="https://unpkg.com/aos@next/dist/aos.js"></script>
        <script>
            // Initialize AOS
            AOS.init({
                duration: 1000,
                offset: 100,
                once: false,
                mirror: true
            });

            // Check if user is logged in
            document.addEventListener('DOMContentLoaded', function() {
                const authToken = localStorage.getItem('authToken') || sessionStorage.getItem('authToken');
                
                if (!authToken) {
                    window.location.href = '/login';
                    return;
                }
                
                fetchPortfolioData();
            });

            async function fetchPortfolioData() {
                try {
                    const authToken = localStorage.getItem('authToken') || sessionStorage.getItem('authToken');
                    
                    const response = await fetch('/api/user/portfolio', {
                        headers: {
                            'Authorization': `Bearer ${authToken}`
                        }
                    });
                    
                    if (response.ok) {
                        const data = await response.json();
                        updatePortfolioUI(data);
                    } else {
                        console.error('Failed to fetch portfolio data');
                        showNotification('Failed to load portfolio data', 'error');
                    }
                } catch (error) {
                    console.error('Error fetching portfolio data:', error);
                    showNotification('Error loading portfolio data', 'error');
                }
            }

            function updatePortfolioUI(data) {
                // Update user info
                document.getElementById('portfolioAvatar').textContent = data.firstName.charAt(0);
                document.getElementById('portfolioName').textContent = `${data.firstName} ${data.lastName}`;
                document.getElementById('portfolioEmail').textContent = data.email;

                // Update stats
                document.getElementById('totalStays').textContent = data.totalStays;
                document.getElementById('totalReviews').textContent = data.totalReviews;
                document.getElementById('totalPoints').textContent = data.loyaltyPoints;

                // Update recent stays
                const staysList = document.getElementById('recentStays');
                if (data.recentStays && data.recentStays.length > 0) {
                    staysList.innerHTML = data.recentStays.map(stay => `
                        <div class="stay-item">
                            <img src="${stay.hotelImage || 'https://images.unsplash.com/photo-1566073771259-6a8506099945?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=80'}" 
                                 alt="${stay.hotelName}" 
                                 class="stay-image">
                            <div class="stay-details">
                                <div class="stay-name">${stay.hotelName}</div>
                                <div class="stay-date">${new Date(stay.checkIn).toLocaleDateString()} - ${new Date(stay.checkOut).toLocaleDateString()}</div>
                            </div>
                        </div>
                    `).join('');
                } else {
                    staysList.innerHTML = '<div class="empty-state">No recent stays</div>';
                }

                // Update recent reviews
                const reviewsList = document.getElementById('recentReviews');
                if (data.recentReviews && data.recentReviews.length > 0) {
                    reviewsList.innerHTML = data.recentReviews.map(review => `
                        <div class="review-item">
                            <div class="review-header">
                                <div class="review-hotel">${review.hotelName}</div>
                                <div class="review-rating">
                                    ${'★'.repeat(review.rating)}${'☆'.repeat(5-review.rating)}
                                </div>
                            </div>
                            <div class="review-text">${review.text}</div>
                        </div>
                    `).join('');
                } else {
                    reviewsList.innerHTML = '<div class="empty-state">No recent reviews</div>';
                }

                // Update achievements
                const achievementsList = document.getElementById('achievements');
                if (data.achievements && data.achievements.length > 0) {
                    achievementsList.innerHTML = data.achievements.map(achievement => `
                        <div class="achievement-item">
                            <div class="achievement-icon">
                                <i class="fas ${achievement.icon || 'fa-trophy'}"></i>
                            </div>
                            <div class="achievement-title">${achievement.title}</div>
                            <div class="achievement-date">${new Date(achievement.date).toLocaleDateString()}</div>
                        </div>
                    `).join('');
                } else {
                    achievementsList.innerHTML = '<div class="empty-state">No achievements yet</div>';
                }
            }

            function showNotification(message, type = 'info') {
                const notification = document.createElement('div');
                notification.className = `notification ${type}`;
                notification.textContent = message;
                document.body.appendChild(notification);

                setTimeout(() => {
                    notification.remove();
                }, 3000);
            }
        </script>
    </body>
</html>